<header class="clearfix">
<div class="header-container">
      <div class="header-menu">
      	<div class="left"><%= image_tag("logo_face.png", style: "height:90px;width:90px;") %></div>
   		 <div class="Text">FacebookClone</div>

        <div class="">
          
          <% if logged_in? %>
           <div class="menu">
          <i class="fas fa-home"> <%= link_to "Home", posts_path,  class: "link" %> </i>
          <%= link_to 'New Post', new_post_path, class: "link" %>
      		</div>
          <% end %>
        </div>
        <div class="">
          <% if logged_in? %>
           <%= link_to "Logout", session_path(current_user.id), method: :delete %>
         <% else %>
           <%= link_to "Sign up", new_user_path %> |
           <%= link_to "Login", new_session_path %>
         <% end %>
        </div>
      </div>
    </div>

</header>
<section class="section">

<h1>Sign up</h1> 
 <% if @user.errors.any? %> 
 <div id="error_explanation"> 
 <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2> 
 <ul> 
 <% @user.errors.full_messages.each do |message| %> 
 <li><%= message %></li> 
 <% end %> 
 </ul> 
 </div>
 <%end%>
 <div class="form">
 <%= form_with(model: @user, local: true) do |f| %>
 <br>
 <%= f.text_field :name, placeholder: "Name..." %> 
 <br>
 <br>
 <%= f.email_field :email, placeholder: "Email..." %>
 <br>
 <br> 
 <%= f.password_field :password, placeholder: "Password..." %>
 <br> 
 <br> 
 <%= f.password_field :password_confirmation, placeholder: "Password. confirmation..." %> 
 <br>
 <br>
 <%= f.submit "Create my account", class: "submit" %> 
 </div>
 <% end %>

 </section>
